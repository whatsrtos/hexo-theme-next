.back-to-top {
  display: none;
  margin: 20px -10px -20px;
  background: $body-bg-color;
  font-size: $b2t-font-size;
  opacity: $b2t-opacity;
  cursor: pointer;
  text-align: center;
  -webkit-transform: translateZ(0);
  the-transition();
    &:hover { opacity: 0.8; }

  +tablet() {
    right: 20px;
    opacity: 0.8;
  }
  +mobile() {
    right: 20px;
    opacity: 0.8;
  }

  &.back-to-top-on {
    display: block;
  }
}
